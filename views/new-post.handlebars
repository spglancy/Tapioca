<div class="postForm">
    <div class="nav">
        {{>nav}}
    </div>
    <form action="/posts" method="post">
        <div class="content">
            <figure>
                <img src="/assets/blankUser.png">
                <figcaption>
                    Upload a Photo
                </figcaption>
            </figure>
            <input type="file" name="imageRoute" id="image-input" type='file' placeholder='image'>
            <input type="text" name="content" value="">
        </div>
        <div class="description">
            <textarea name="description" rows="20" cols="100"></textarea>
        </div>
            <button type="submit" name="post">Submit</button>
    </form>
    <div class="friends">

    </div>
</div>
